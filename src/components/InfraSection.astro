---
import ImageCard from './ImageCard.astro';
import SectionHeading from './SectionHeading.astro';
import { featureCards } from '../data/feature-cards';

interface Props {
	background?: 'white' | 'blue-white';
}

const { background = 'blue-white' } = Astro.props;
const bgClass = background === 'white' ? 'bg-white' : 'bg-blue-white';
---

<section id="tecnologia" class:list={[bgClass, 'py-24 w-full']}>
	<div class="container-site flex flex-col gap-12">

		<div class="w-full max-w-2xl mx-auto flex flex-col items-center text-center">
			<SectionHeading
				label="Clínica"
				title="Para una atención de calidad"
				description="En Dental Gran Avenida, queremos que ir al dentista sea una experiencia tranquila y positiva. Por eso cuidamos cada detalle para que te sientas seguro, cómodo y en buenas manos."
				centered
			/>
		</div>

		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
			{featureCards.map((card, i) => (
				<div data-sal="slide-up" data-sal-duration="400" data-sal-delay={i * 80} class="h-full">
					<ImageCard title={card.title} description={card.description} image={card.image} />
				</div>
			))}
		</div>

	</div>
</section>
