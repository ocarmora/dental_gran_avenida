---
import { Image } from 'astro:assets';
import SectionHeading from './SectionHeading.astro';
import doctorImage from '../assets/images/doctor-figma.png';

interface Props {
	background?: 'white' | 'blue-white';
}

const { background = 'blue-white' } = Astro.props;
const bgClass = background === 'white' ? 'bg-white' : 'bg-blue-white';

const members = [
	{ name: 'Dr. Marco Guerrero', specialty: 'Implantología · +20 años de experiencia' },
	{ name: 'Dr. Marco Guerrero M.', specialty: 'Periodoncia · +14 años de experiencia' },
	{ name: 'Dr. Felipe Guerrero', specialty: 'Cirugía Maxilofacial · +12 años de experiencia' },
	{ name: 'Dra. Catalina García', specialty: 'Ortodoncia · +15 años de experiencia' },
	{ name: 'Dr. René Chateau', specialty: 'Psicología Dental · +8 años de experiencia' },
	{ name: 'Dr. Xavier Uriarte', specialty: 'Estética Facial · +9 años de experiencia' },
	{ name: 'Dra. Camila Rusque', specialty: 'Endodoncia · +10 años de experiencia' },
	{ name: 'Dr. José Martínez', specialty: 'Rehabilitación Oral · +18 años de experiencia' },
	{ name: 'Dr. Marco Mardones', specialty: 'Odontología General · +16 años de experiencia' },
	{ name: 'Dr. Imanol Ballesteros', specialty: 'Radiología Dental · +11 años de experiencia' },
];
---

<section class:list={[bgClass, 'py-24 w-full']}>
	<div class="container-site flex flex-col gap-12 items-center">

		<SectionHeading
			label="El equipo"
			title="Profesionales con experiencia"
			description="Nuestros especialistas combinan formación de primer nivel con un trato cercano, asegurando la mejor atención para ti y tu familia."
			centered
		/>

		<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8 w-full">
			{members.map((m) => (
				<div class="bg-white rounded-2xl flex flex-col gap-6 items-center px-8 py-10">
					<div class="size-44 rounded-xl overflow-hidden shrink-0 bg-card">
						<Image
							src={doctorImage}
							alt={m.name}
							class="w-full h-full object-cover"
						/>
					</div>
					<div class="flex flex-col gap-1.5 w-full text-center">
						<p class="font-display font-bold text-xl text-navy-blue">{m.name}</p>
						<p class="text-base text-body">{m.specialty}</p>
					</div>
				</div>
			))}
		</div>

	</div>
</section>
