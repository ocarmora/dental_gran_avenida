---
interface Props {
  href: string;
  /**
   * Desktop header: icon only, expands on hover to reveal label.
   */
  expandable?: boolean;
  /**
   * Mobile sticky header: compact height (h-10) with smaller text.
   */
  compact?: boolean;
  class?: string;
}

const {
  href,
  expandable = false,
  compact = false,
  class: className,
} = Astro.props;
---

<a
  href={href}
  class:list={[
    className,
    "group flex items-center rounded-full border border-red-700/30 bg-red-50 text-red-700 hover:bg-red-700 hover:border-red-700 hover:text-white transition-colors focus-ring",
    compact && "h-10 gap-2 px-4",
    expandable && "h-12 shrink-0",
    !compact && !expandable && "h-12 gap-2 px-4",
  ]}
  aria-label="Urgencias"
>
  {
    expandable ? (
      <>
        <span
          class="flex items-center justify-center size-12 shrink-0"
          aria-hidden="true"
        >
          <svg viewBox="0 0 32 32" class="size-5 fill-current">
            <path d="M17,6h-2V4h2V6z M25.899,8.515L24.485,7.1l-1.414,1.414l1.414,1.414L25.899,8.515z M8.929,8.515 L7.515,7.1L6.101,8.515l1.414,1.414L8.929,8.515z M26,26h3v2H3v-2h3v-9c0-5.523,4.556-10,10-10s10,4.477,10,10V26z M24,17 c0-4.411-3.589-8-8-8s-8,3.589-8,8v9h16V17z M5,16H3v2h2V16z M27,16v2h2v-2H27z M10,17v7h2v-7c0-2.209,1.791-4,4-4v-2 C12.686,11,10,13.686,10,17z" />
          </svg>
        </span>
        <span class="overflow-hidden whitespace-nowrap text-base font-normal max-w-0 group-hover:max-w-24 pr-0 group-hover:pr-6 transition-[max-width,padding-right] duration-300">
          Urgencias
        </span>
      </>
    ) : (
      <>
        <svg
          viewBox="0 0 32 32"
          class="size-5 shrink-0 fill-current"
          aria-hidden="true"
        >
          <path d="M17,6h-2V4h2V6z M25.899,8.515L24.485,7.1l-1.414,1.414l1.414,1.414L25.899,8.515z M8.929,8.515 L7.515,7.1L6.101,8.515l1.414,1.414L8.929,8.515z M26,26h3v2H3v-2h3v-9c0-5.523,4.556-10,10-10s10,4.477,10,10V26z M24,17 c0-4.411-3.589-8-8-8s-8,3.589-8,8v9h16V17z M5,16H3v2h2V16z M27,16v2h2v-2H27z M10,17v7h2v-7c0-2.209,1.791-4,4-4v-2 C12.686,11,10,13.686,10,17z" />
        </svg>
        <span
          class:list={[
            compact ? "text-sm" : "text-base",
            "font-normal whitespace-nowrap",
          ]}
        >
          Urgencias
        </span>
      </>
    )
  }
</a>
