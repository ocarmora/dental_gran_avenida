---
interface Props {
	label: string;
	centered?: boolean;
	variant?: 'default' | 'overlay';
}

const { label, centered = false, variant = 'default' } = Astro.props;
const isOverlay = variant === 'overlay';
---

<div class:list={['flex gap-3 items-center', centered && 'justify-center']}>
	<div class:list={['h-px w-10 shrink-0', isOverlay ? 'bg-white/80' : 'bg-bright-ocean']}></div>
	<span class:list={['text-base', isOverlay ? 'text-white/90' : 'text-body']}>{label}</span>
</div>
