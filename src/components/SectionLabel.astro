---
interface Props {
	label: string;
	centered?: boolean;
	centerOnMobile?: boolean;
	variant?: 'default' | 'overlay';
}

const { label, centered = false, centerOnMobile = false, variant = 'default' } = Astro.props;
const isOverlay = variant === 'overlay';
const alignmentClass = centered ? 'justify-center' : centerOnMobile ? 'justify-center lg:justify-start' : '';
---

<div class:list={['flex gap-3 items-center', alignmentClass]}>
	<div class:list={['h-px w-10 shrink-0', isOverlay ? 'bg-white/80' : 'bg-bright-ocean']}></div>
	<span class:list={['text-base', isOverlay ? 'text-white/90' : 'text-body']}>{label}</span>
</div>
