---
import { Image } from 'astro:assets';
import type { TeamMember } from '../data/team';

interface Props {
	member: TeamMember;
}

const { member } = Astro.props;
---

<!-- max-w-64 = 256px = 32 × 8. Allows 4 cols in container (4×256 + 3×32 = 1120 < 1200) -->
<article class="bg-white rounded-2xl flex flex-col gap-6 items-center px-8 py-10 w-full max-w-64 shrink-0">
	<div class="size-44 rounded-xl overflow-hidden shrink-0 bg-card">
		<Image
			src={member.image}
			alt={member.name}
			class="w-full h-full object-cover"
			width={176}
			height={176}
		/>
	</div>
	<div class="flex flex-col gap-1.5 w-full text-center min-w-0">
		<p class="font-display font-bold text-lg text-navy-blue">{member.name}</p>
		<p class="text-base text-body">{member.specialty}</p>
	</div>
</article>
