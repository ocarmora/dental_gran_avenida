---
import { Image } from "astro:assets";
import type { TeamMember } from "../data/team";

interface Props {
  member: TeamMember;
}

const { member } = Astro.props;
---

<article class="group flex flex-col gap-3 w-full max-w-56 shrink-0">
  <div class="overflow-hidden rounded-2xl aspect-3/4 bg-french-ultramarine/10">
    <Image
      src={member.image}
      alt={member.name}
      class="w-full h-full object-cover object-top transition-transform duration-700 ease-out group-hover:scale-105"
      width={600}
      height={800}
    />
  </div>

  <div class="flex flex-col gap-0.5 px-1">
    <p class="font-display font-bold text-base text-navy-blue leading-snug">
      {member.name}
    </p>
    <p class="text-sm text-body/75">{member.specialty}</p>
  </div>
</article>
