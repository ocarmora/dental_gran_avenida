---
interface Props {
	class?: string;
	variant?: 'default' | 'blue' | 'red';
}

const { class: className, variant = 'default' } = Astro.props;
const bgClass =
	variant === 'blue' ? 'bg-blue-white' :
	variant === 'red' ? 'bg-red-50' :
	'bg-white';
---

<article class:list={[bgClass, 'rounded-2xl flex flex-col gap-6 px-8 py-10 h-full', className].filter(Boolean)}>
	<slot />
</article>
