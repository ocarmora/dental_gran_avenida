---
import { config } from '../config';
import Button from './Button.astro';
import Card from './Card.astro';
import SectionHeading from './SectionHeading.astro';

const features = [
	{
		title: 'Mejor tecnología',
		description: 'Contamos con scanner 3D, radiografías digitales y equipos de última generación para diagnósticos precisos.',
		image: '/images/service-placeholder.jpg',
	},
	{
		title: 'Atención Urgencias',
		description: 'Atendemos urgencias el mismo día. Tu dolor no puede esperar.',
		image: '/images/service-placeholder.jpg',
	},
	{
		title: 'Tratamiento sin dolor',
		description: 'Técnicas y sedación consciente para que tu visita sea completamente confortable.',
		image: '/images/service-placeholder.jpg',
	},
	{
		title: 'Laboratorio',
		description: 'Laboratorio de patología oral propio para resultados en tiempo récord.',
		image: '/images/service-placeholder.jpg',
	},
];
---

<section class="bg-blue-white py-24 w-full">
	<div class="container-site grid grid-cols-[2fr_1fr_1fr] grid-rows-2 gap-6">

		<!-- Left column: heading + CTA — spans both rows -->
		<div class="row-span-2 flex flex-col gap-12 items-start justify-center">
			<SectionHeading
				label="Clínica dental"
				title="Una atención que destaca"
				description="En Dental Gran Avenida contamos con especialistas de primer nivel, tecnología avanzada y una infraestructura completa bajo un mismo techo para entregarte la mejor atención."
			/>
			<Button href={config.whatsapp.url} label="Agendar hora" variant="secondary" target="_blank" />
		</div>

		<!-- 4 feature cards: cols 2–3, rows 1–2 -->
		{features.map((f) => (
			<Card>
				<div class="size-40 rounded-2xl overflow-hidden shrink-0">
					<img src={f.image} alt="" class="w-full h-full object-cover" />
				</div>
				<div class="flex flex-col gap-2">
					<p class="font-display font-bold text-xl text-navy-blue">{f.title}</p>
					<p class="text-base text-body">{f.description}</p>
				</div>
			</Card>
		))}

	</div>
</section>
