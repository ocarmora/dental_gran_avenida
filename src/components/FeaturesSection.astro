---
import { config } from '../config';
import Button from './Button.astro';
import Card from './Card.astro';
import SectionHeading from './SectionHeading.astro';

interface Props {
	background?: 'white' | 'blue-white';
}

const { background = 'blue-white' } = Astro.props;
const bgClass = background === 'white' ? 'bg-white' : 'bg-blue-white';
const iconClass = 'size-10 shrink-0 text-navy-blue';

const features = [
	{
		title: 'Mejor tecnología',
		description: 'Contamos con scanner 3D, radiografías digitales y equipos de última generación para diagnósticos precisos.',
		icon: 'scanner',
	},
	{
		title: 'Atención Urgencias',
		description: 'Atendemos urgencias el mismo día. Tu dolor no puede esperar.',
		icon: 'urgency',
	},
	{
		title: 'Tratamiento sin dolor',
		description: 'Técnicas y sedación consciente para que tu visita sea completamente confortable.',
		icon: 'treatment',
	},
	{
		title: 'Laboratorio',
		description: 'Laboratorio de patología oral propio para resultados en tiempo récord.',
		icon: 'dental',
	},
];
