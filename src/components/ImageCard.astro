---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
  title: string;
  description: string;
  image: ImageMetadata;
  class?: string;
}

const { title, description, image, class: className } = Astro.props;
---

<article class:list={["group relative", className]}>

  <div class="overflow-hidden rounded-2xl aspect-3/4">
    <Image
      src={image}
      alt={title}
      class="w-full h-full object-cover transition-transform duration-700 ease-out group-hover:scale-105"
      width={400}
      height={533}
    />
  </div>

  <div class="absolute bottom-3 left-3 right-3 bg-white rounded-xl px-5 py-4 shadow-lg transition-transform duration-300 ease-out group-hover:-translate-y-1">
    <div class="w-6 h-0.5 bg-french-ultramarine rounded-full mb-2.5" aria-hidden="true" />
    <p class="font-display font-bold text-base text-navy-blue leading-snug">{title}</p>
    <p class="text-sm text-body/75 mt-1 leading-relaxed">{description}</p>
  </div>

</article>
