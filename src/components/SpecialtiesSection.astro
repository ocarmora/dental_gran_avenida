---
import { Image } from 'astro:assets';
import SectionHeading from './SectionHeading.astro';
import servicePlaceholder from '../assets/images/service-placeholder.jpg';
import { specialties } from '../data/specialties';
import { toHref } from '../config';

interface Props {
	background?: 'white' | 'blue-white';
}

const { background = 'blue-white' } = Astro.props;
const bgClass = background === 'white' ? 'bg-white' : 'bg-blue-white';
---

<section class:list={[bgClass, 'py-24 w-full']}>
    <div class="container-site flex flex-col gap-12 items-center">

        <SectionHeading
            label="Servicios"
            title="Conoce nuestras especialidades"
            description="Ofrecemos tratamientos completos realizados por especialistas con años de experiencia clínica."
            centered
        />

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 w-full">
            {specialties.map((s) => (
                <a
                    href={toHref(`/especialidades/${s.slug}`)}
                    class="group relative flex flex-col justify-end min-h-[320px] lg:h-[400px] rounded-2xl overflow-hidden p-8 transition-all duration-500 hover:shadow-2xl"
                >
                    <div class="absolute inset-0 z-0">
                        <Image
                            src={s.image ?? servicePlaceholder}
                            alt={s.label}
                            class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                        />
                        <div class="absolute inset-0 bg-linear-to-t from-black/90 via-transparent to-transparent opacity-100 group-hover:opacity-0 transition-opacity duration-500" />
                        <div
                            class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-500"
                            style="background: linear-gradient(to bottom, transparent 0%, rgba(0,0,0,0.4) 30%, rgba(0,0,0,0.8) 70%, rgba(0,0,0,0.95) 100%);"
                        />
                    </div>

                    <div class="relative z-10 flex flex-col">
                        <p class="font-display font-bold text-xl text-white transition-transform duration-500 group-hover:-translate-y-1">
                            {s.label}
                        </p>

                        <div class="grid grid-rows-[0fr] opacity-0 transition-all duration-500 ease-in-out group-hover:grid-rows-[1fr] group-hover:opacity-100 group-hover:mt-4">
                            <div class="overflow-hidden">
                                <p class="text-base text-white/90 mb-6 leading-relaxed">
                                    {s.description}
                                </p>
                                <span class="inline-flex items-center gap-3 text-white font-medium group/link transition-opacity hover:opacity-80 w-fit">
                                    Más información
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 18 8" class="w-[18px] h-[8px] fill-white transition-transform duration-300 group-hover/link:translate-x-1" aria-hidden="true">
                                        <path d="M17.354 4.354a.5.5 0 0 0 0-.708L14.172.464a.5.5 0 1 0-.708.708L16.293 4l-2.829 2.828a.5.5 0 1 0 .708.708l3.182-3.182ZM0 4.5h17v-1H0v1Z"/>
                                    </svg>
                                </span>
                            </div>
                        </div>
                    </div>
                </a>
            ))}
        </div>

    </div>
</section>
