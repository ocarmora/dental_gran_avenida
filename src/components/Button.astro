---
interface Props {
	href: string;
	label: string;
	variant?: 'primary' | 'secondary';
	target?: '_blank' | '_self';
}

const { href, label, variant = 'primary', target } = Astro.props;
const rel = target === '_blank' ? 'noopener noreferrer' : undefined;
---

<a
	href={href}
	target={target}
	rel={rel}
	class:list={[
		'inline-flex gap-3 h-14 items-center justify-center min-w-[200px] px-8 rounded-full shrink-0 text-base font-normal transition-all',
		variant === 'primary'
			? 'bg-french-ultramarine text-white hover:opacity-90'
			: 'border border-french-ultramarine text-french-ultramarine hover:bg-blue-white',
	]}
>
	{label}
	<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 18 8" class="w-[18px] h-[8px] shrink-0" aria-hidden="true">
		<path d="M17.354 4.354a.5.5 0 0 0 0-.708L14.172.464a.5.5 0 1 0-.708.708L16.293 4l-2.829 2.828a.5.5 0 1 0 .708.708l3.182-3.182ZM0 4.5h17v-1H0v1Z" fill="currentColor"/>
	</svg>
</a>
